<%- include('../partials/header', { user }) %>

<div class="row">
  <div class="col-md-7 mb-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-0 d-flex justify-content-between">
        <h5 class="mb-0">Enrolled Courses</h5>
      </div>
      <div class="card-body p-0">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Course Code</th>
              <th>Course Name</th>
              <th>Sem</th>
              <th>Marks</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (enrollments.length === 0) { %>
              <tr><td colspan="5" class="text-center text-muted py-3">No courses yet.</td></tr>
            <% } %>
            <% enrollments.forEach(e => { %>
              <tr>
                <td><%= e.courseCode %></td>
                <td><%= e.courseName %></td>
                <td><%= e.semester || '-' %></td>
                <td><%= e.marks %></td>
                <td class="text-end">
                  <a href="/enrollments/<%= e._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                  <form action="/enrollments/<%= e._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-5 mb-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-white border-0">
        <h5 class="mb-0">Add New Course</h5>
      </div>
      <div class="card-body">
        <form method="POST" action="/enrollments">
          <div class="mb-3">
            <label class="form-label">Course Name</label>
            <input type="text" name="courseName" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Course Code</label>
            <input type="text" name="courseCode" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Semester</label>
            <input type="text" name="semester" class="form-control">
          </div>
          <div class="mb-3">
            <label class="form-label">Marks</label>
            <input type="number" name="marks" class="form-control" value="0" min="0" max="100">
          </div>
          <button class="btn btn-primary w-100">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
