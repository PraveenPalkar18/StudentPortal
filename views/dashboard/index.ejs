<%- include('../partials/header', { user }) %>

<div class="row mb-4">
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-body d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <h4 class="mb-1">Welcome, <%= user.name %> ðŸ‘‹</h4>
          <p class="mb-0 text-muted">
            Roll No: <strong><%= user.rollNo %></strong> &middot;
            Branch: <strong><%= user.branch || '-' %></strong>
          </p>
        </div>
        <div class="mt-3 mt-md-0">
          <a href="/enrollments" class="btn btn-outline-primary me-2">Manage Courses</a>
          <a href="/projects" class="btn btn-primary">Manage Projects</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row g-3">
  <div class="col-md-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-white border-0">
        <h5 class="mb-0">Recent Courses</h5>
      </div>
      <div class="card-body">
        <% if (enrollments.length === 0) { %>
          <p class="text-muted">No courses added yet.</p>
        <% } else { %>
          <ul class="list-group list-group-flush">
            <% enrollments.slice(0, 5).forEach(e => { %>
              <li class="list-group-item d-flex justify-content-between">
                <span>
                  <strong><%= e.courseCode %></strong> â€“ <%= e.courseName %>
                  <small class="text-muted d-block">Sem: <%= e.semester || '-' %></small>
                </span>
                <span class="badge text-bg-success align-self-center">
                  <%= e.marks %> marks
                </span>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-header bg-white border-0">
        <h5 class="mb-0">Projects</h5>
      </div>
      <div class="card-body">
        <% if (projects.length === 0) { %>
          <p class="text-muted">No projects added yet.</p>
        <% } else { %>
          <ul class="list-group list-group-flush">
            <% projects.slice(0, 5).forEach(p => { %>
              <li class="list-group-item d-flex justify-content-between">
                <span>
                  <strong><%= p.title %></strong>
                  <small class="text-muted d-block">
                    <%= p.description ? p.description.substring(0, 40) + '...' : '' %>
                  </small>
                </span>
                <span class="badge <%= p.status === 'COMPLETED' ? 'text-bg-success' : 'text-bg-warning' %> align-self-center">
                  <%= p.status %>
                </span>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
